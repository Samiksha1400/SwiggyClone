<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10sp"
    tools:context=".InstamartFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relative_layout">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/freeEssentialsImg"
        android:layout_marginTop="30dp"
        android:src="@drawable/freesnack1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtFreeEssentials"
        android:text="FREE ESSENTIALS!"
        android:layout_toRightOf="@id/freeEssentialsImg"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20sp"
        android:fontFamily="monospace"
        android:textColor="#E47820"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtFreeEssentialsDesc"
        android:layout_below="@id/txtFreeEssentials"
        android:text="Get freebies with your order"
        android:layout_toRightOf="@id/freeEssentialsImg"
        android:layout_marginLeft="20sp"
        android:fontFamily="monospace"
        android:textColor="#7A3F0F"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtFreeEssentialsCode"
        android:layout_below="@id/txtFreeEssentialsDesc"
        android:text="Use Code: INSTAIT"
        android:layout_toRightOf="@id/freeEssentialsImg"
        android:layout_marginLeft="20sp"
        android:fontFamily="monospace"
        android:textColor="#7A3F0F"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtHotdeals"
        android:layout_below="@id/freeEssentialsImg"
        android:layout_marginTop="20sp"
        android:text="Hot Deals"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtSeeAllHotDeals"
        android:layout_below="@id/freeEssentialsImg"
        android:layout_marginTop="20sp"
        android:layout_alignParentRight="true"
        android:text="See All"
        android:textColor="@color/SecondaryColor"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtDiscount"
        android:layout_below="@id/txtHotdeals"
        android:text="Upto 50% Off"
        android:textColor="@color/black"/>

    <ViewFlipper
        android:id="@+id/image_slider"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_below="@id/txtDiscount"
        android:layout_marginTop="30dp"
        android:autoStart="true"
        android:contextClickable="false"
        android:flipInterval="2000"
        android:inAnimation="@android:anim/slide_in_left"
        android:outAnimation="@android:anim/slide_out_right">

        <ImageView
            android:id="@+id/autoImageSlider1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/homeslide1" />

        <ImageView
            android:id="@+id/autoImageSlider2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/homeslide2" />

        <ImageView
            android:id="@+id/autoImageSlider3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/homeslide3" />
    </ViewFlipper>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtShopByCategory"
        android:layout_below="@id/image_slider"
        android:layout_marginTop="30sp"
        android:text="Shop by category"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/line1"
            android:orientation="horizontal"
            android:layout_below="@id/txtShopByCategory"
            android:layout_marginTop="10sp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/frameLayout1">
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:id="@+id/grid_layout1"
                    android:columnCount="4">

                    <androidx.cardview.widget.CardView
                        android:layout_height="0dp"
                        android:layout_width="0dp"
                        android:id="@+id/cardviewFreshVegitables"
                        app:cardCornerRadius="15dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="10dp"
                        android:elevation="0dp">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="#F3EFEF">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:id="@+id/InstamartCategoryFreshVegitables"
                                android:src="@drawable/instamart_category_fresh_vegitables"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtFreshVegitables"
                                android:text="Fresh Vegitables"
                                android:textColor="@color/Grey"
                                android:layout_below="@id/InstamartCategoryFreshVegitables"
                                android:gravity="center"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_height="0dp"
                        android:layout_width="0dp"
                        android:id="@+id/cardviewFreshFruits"
                        app:cardCornerRadius="15dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="10dp"
                        android:elevation="0dp">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="#F3EFEF">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:id="@+id/InstamartCategoryFreshFruits"
                                android:src="@drawable/instamart_category_fresh_fruits"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtFreshFruits"
                                android:text="Fresh     Fruits"
                                android:textColor="@color/Grey"
                                android:layout_below="@id/InstamartCategoryFreshFruits"
                                android:gravity="center"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_height="0dp"
                        android:layout_width="0dp"
                        android:id="@+id/cardviewDairyProducts"
                        app:cardCornerRadius="15dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="10dp"
                        android:elevation="0dp">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="#F3EFEF">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:id="@+id/InstamartCategoryDairyProducts"
                                android:src="@drawable/instamart_category_dairy_product"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtDairyProducts"
                                android:text="Dairy, Bread and Eggs"
                                android:textColor="@color/Grey"
                                android:layout_below="@id/InstamartCategoryDairyProducts"
                                android:gravity="center"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_height="0dp"
                        android:layout_width="0dp"
                        android:id="@+id/cardviewAttaRice"
                        app:cardCornerRadius="15dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="10dp"
                        android:elevation="0dp">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="#F3EFEF">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:id="@+id/InstamartCategoryAttaRice"
                                android:src="@drawable/instamart_category_rice"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtAtta"
                                android:text="Atta, Rice and Dals"
                                android:textColor="@color/Grey"
                                android:layout_below="@id/InstamartCategoryAttaRice"
                                android:gravity="center"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </GridLayout>
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/line2"
            android:orientation="horizontal"
            android:layout_below="@id/line1">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/frameLayout2">
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:id="@+id/grid_layout2"
                    android:columnCount="4">

                    <androidx.cardview.widget.CardView
                        android:layout_height="0dp"
                        android:layout_width="0dp"
                        android:id="@+id/cardviewMasalasAndDryfruits"
                        app:cardCornerRadius="15dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="10dp"
                        android:elevation="0dp">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="#F3EFEF">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:id="@+id/InstamartCategoryMasalasAndDryfruits"
                                android:src="@drawable/instamart_category_masala"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtMasalasAndDryfruits"
                                android:text="Masalas &amp; Dry Fruits"
                                android:textColor="@color/Grey"
                                android:layout_below="@id/InstamartCategoryMasalasAndDryfruits"
                                android:gravity="center"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_height="0dp"
                        android:layout_width="0dp"
                        android:id="@+id/cardviewOilAndGhee"
                        app:cardCornerRadius="15dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="10dp"
                        android:elevation="0dp">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="#F3EFEF">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:id="@+id/InstamartCategoryOilAndGhee"
                                android:src="@drawable/instamart_category_dairy_product"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtOilAndGhee"
                                android:text="Edible Oils and Ghee"
                                android:textColor="@color/Grey"
                                android:layout_below="@id/InstamartCategoryOilAndGhee"
                                android:gravity="center"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_height="0dp"
                        android:layout_width="0dp"
                        android:id="@+id/cardviewMunchies"
                        app:cardCornerRadius="15dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="10dp"
                        android:elevation="0dp">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="#F3EFEF">

                            <ImageView
                                android:id="@+id/InstamartCategoryMunchies"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:src="@drawable/pizza" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtMunchies"
                                android:text="Munchies"
                                android:textColor="@color/Grey"
                                android:layout_below="@id/InstamartCategoryMunchies"
                                android:gravity="center"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_height="0dp"
                        android:layout_width="0dp"
                        android:id="@+id/cardviewSweetTooth"
                        app:cardCornerRadius="15dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="10dp"
                        android:elevation="0dp">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="#F3EFEF">

                            <ImageView
                                android:id="@+id/InstamartCategorySweetTooth"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:src="@drawable/pizza" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtSweetTooth"
                                android:text="Sweet Tooth"
                                android:textColor="@color/Grey"
                                android:layout_below="@id/InstamartCategorySweetTooth"
                                android:gravity="center"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </GridLayout>
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/line3"
            android:orientation="horizontal"
            android:layout_below="@id/line2">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/frameLayout3">
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:id="@+id/grid_layout3"
                    android:columnCount="4">

                    <androidx.cardview.widget.CardView
                        android:layout_height="0dp"
                        android:layout_width="0dp"
                        android:id="@+id/cardviewColdDrinkAndJuices"
                        app:cardCornerRadius="15dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="10dp"
                        android:elevation="0dp">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="#F3EFEF">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:id="@+id/InstamartCategoryColdDrinkAndJuices"
                                android:src="@drawable/instamart_category_fresh_vegitables"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtColdDrinkAndJuices"
                                android:text="Cold Drinks and Juices"
                                android:textColor="@color/Grey"
                                android:layout_below="@id/InstamartCategoryColdDrinkAndJuices"
                                android:gravity="center"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_height="0dp"
                        android:layout_width="0dp"
                        android:id="@+id/cardviewBiscuitsAndCakes"
                        app:cardCornerRadius="15dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="10dp"
                        android:elevation="0dp">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="#F3EFEF">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:id="@+id/InstamartCategoryBiscuitsAndCakes"
                                android:src="@drawable/instamart_category_fresh_fruits"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtBiscuitsAndCakes"
                                android:text="Biscuits and Cakes"
                                android:textColor="@color/Grey"
                                android:layout_below="@id/InstamartCategoryBiscuitsAndCakes"
                                android:gravity="center"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_height="0dp"
                        android:layout_width="0dp"
                        android:id="@+id/cardviewInstantAndFrozenFood"
                        app:cardCornerRadius="15dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="10dp"
                        android:elevation="0dp">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="#F3EFEF">

                            <ImageView
                                android:id="@+id/InstamartCategoryInstantAndFrozenFood"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:src="@drawable/pizza" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtInstantAndFrozenFood"
                                android:text="Instant and Frozen Food"
                                android:textColor="@color/Grey"
                                android:layout_below="@id/InstamartCategoryInstantAndFrozenFood"
                                android:gravity="center"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_height="0dp"
                        android:layout_width="0dp"
                        android:id="@+id/cardviewMeatAndSeaFood"
                        app:cardCornerRadius="15dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="10dp"
                        android:elevation="0dp">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="#F3EFEF">

                            <ImageView
                                android:id="@+id/InstamartCategoryMeatAndSeaFood"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:src="@drawable/pizza" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtMeatAndSeaFood"
                                android:text="Meat and Sea Food"
                                android:textColor="@color/Grey"
                                android:layout_below="@id/InstamartCategoryMeatAndSeaFood"
                                android:gravity="center"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </GridLayout>
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/line4"
            android:orientation="horizontal"
            android:layout_below="@id/line3">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/frameLayout4">
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:id="@+id/grid_layout4"
                    android:columnCount="4">

                    <androidx.cardview.widget.CardView
                        android:layout_height="0dp"
                        android:layout_width="0dp"
                        android:id="@+id/cardviewCerealsAndBreakfast"
                        app:cardCornerRadius="15dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="10dp"
                        android:elevation="0dp">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="#F3EFEF">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:id="@+id/InstamartCategoryCerealsAndBreakfast"
                                android:src="@drawable/instamart_category_fresh_vegitables"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtCerealsAndBreakfast"
                                android:text="Cereals and Breakfast"
                                android:textColor="@color/Grey"
                                android:layout_below="@id/InstamartCategoryCerealsAndBreakfast"
                                android:gravity="center"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_height="0dp"
                        android:layout_width="0dp"
                        android:id="@+id/cardviewSaucesAndSpreads"
                        app:cardCornerRadius="15dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="10dp"
                        android:elevation="0dp">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="#F3EFEF">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:id="@+id/InstamartCategorySaucesAndSpreads"
                                android:src="@drawable/instamart_category_fresh_fruits"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtSaucesAndSpreads"
                                android:text="Sauces and Spreads"
                                android:textColor="@color/Grey"
                                android:layout_below="@id/InstamartCategorySaucesAndSpreads"
                                android:gravity="center"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_height="0dp"
                        android:layout_width="0dp"
                        android:id="@+id/cardviewTeaCoffee"
                        app:cardCornerRadius="15dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="10dp"
                        android:elevation="0dp">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="#F3EFEF">

                            <ImageView
                                android:id="@+id/InstamartCategoryTeaCoffee"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:src="@drawable/pizza" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtTeaCoffee"
                                android:text="Tea, Coffee and More"
                                android:textColor="@color/Grey"
                                android:layout_below="@id/InstamartCategoryTeaCoffee"
                                android:gravity="center"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_height="0dp"
                        android:layout_width="0dp"
                        android:id="@+id/cardviewCleaningEssentials"
                        app:cardCornerRadius="15dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="10dp"
                        android:elevation="0dp">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="#F3EFEF">

                            <ImageView
                                android:id="@+id/InstamartCategoryCleaningEssentials"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:src="@drawable/pizza" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtCleaningEssentials"
                                android:text="Cleaning Essentials"
                                android:textColor="@color/Grey"
                                android:layout_below="@id/InstamartCategoryCleaningEssentials"
                                android:gravity="center"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </GridLayout>
            </FrameLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtExclusiveDeals"
            android:layout_below="@id/line4"
            android:layout_marginTop="30sp"
